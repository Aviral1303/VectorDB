# Environment configuration for Vector DB API
# Copy this file to .env and configure as needed

# Application
VECTORDB_APP_NAME="Vector DB API"
VECTORDB_APP_VERSION="1.0.0"
VECTORDB_ENVIRONMENT="development"
VECTORDB_DEBUG=true

# Server
VECTORDB_HOST="0.0.0.0"
VECTORDB_PORT=8000

# Logging
VECTORDB_LOG_LEVEL="INFO"
VECTORDB_LOG_FORMAT="json"

# Vector DB Settings
VECTORDB_DEFAULT_INDEX_TYPE="brute_force"
VECTORDB_ALLOW_STALE_INDEX=true
VECTORDB_MAX_EMBEDDING_DIMENSION=4096

# Embedding Service
VECTORDB_EMBEDDING_PROVIDER="cohere"
VECTORDB_COHERE_API_KEY="rQsWxQJOK89Gp87QHo6qnGtPiWerGJOxvdg59o5f"
VECTORDB_COHERE_MODEL="embed-english-v3.0"
VECTORDB_EMBEDDING_CACHE_SIZE=1000

# Persistence (optional)
VECTORDB_PERSISTENCE_ENABLED=false
VECTORDB_PERSISTENCE_DIR="./data"

# Concurrency
VECTORDB_MAX_CONCURRENT_INDEX_BUILDS=2
VECTORDB_INDEX_BUILD_TIMEOUT_SECONDS=300
